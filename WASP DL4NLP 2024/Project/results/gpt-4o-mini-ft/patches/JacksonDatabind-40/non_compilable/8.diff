+    public void testEmptyToNullCoercionForPrimitives() throws Exception {
+        _testEmptyToNullCoercion(int.class, Integer.valueOf(0));
+        _testEmptyToNullCoercion(long.class, Long.valueOf(0));
+        _testEmptyToNullCoercion(double.class, Double.valueOf(0.0));
+        _testEmptyToNullCoercion(float.class, Float.valueOf(0.0f));
+    }
+
+    private void _testEmptyToNullCoercion(Class<?> clazz, Object expected) {
+        rst.setEmptyToNull(true);
+        Object result = rst.convertValue(clazz, null, null, "");
+
+        // commons-beanutils is not the most reliable at providing the default value of classes,
+        // which is new Integer(0), whereas the framework builders are capable of using Autoboxed
+        // default values (like 0, 0L, 0.0d etc)
+        assertEquals(expected, result);
+    }
